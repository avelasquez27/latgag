<!DOCTYPE html>
<html>
<head>
  <title>Gag</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="container">
	<%= nav_bar :fixed => :top, :brand => "Gag", :responsive => true do  %>
		<%= menu_group do %>
			<%= menu_item 'Home', root_path %>
			 <% if current_user %>
			<%= menu_divider %>
				<%= drop_down 'Post' do %>
				<%= menu_item "New Post!", new_post_path %>
				<% end %>
			<%= menu_item 'Edit User', edit_user_path(current_user) %>
			<%= menu_item "Logout | #{current_user.username}", logout_path %>
			<%else%>
			<%= menu_item 'Login', login_path %>
			<%= menu_item 'Signup!', new_user_path %>
			<%end%>
		<%end%>
	<%end%><br><br>

<%= yield %>
</div>
</body>
</html>