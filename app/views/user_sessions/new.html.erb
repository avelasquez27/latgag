<%= form_tag user_sessions_path, :method => :post do%>

	<h3>Login</h3>
	<div class="field">
		<%= label_tag :email %><br>
		<%= text_field_tag :email %><br>
	</div>
	<div class="field">
		<%= label_tag :password %><br>
		<%= password_field_tag :password %>
	</div>
	<div class="actions">
		<%= submit_tag %>
	</div>
<% end %>